<!-- Put site-specific property overrides in this file. -->

<configuration>
 <!-- 配置Hadoop文件上传、下载端口，基于RPC协议，无法通过浏览器直接查看-->
  <property>
        <name>fs.defaultFS</name>
        <value>hdfs://laoxiao</value>
  </property>
<!-- 配置Hadoop临时文件的存储路径-->
 <property>
        <name>hadoop.tmp.dir</name>
        <value>/opt/hadoop-2.5</value>
  </property>

  <property>
   <name>ha.zookeeper.quorum</name>
   <value>node1:2181,node6:2181,node7:2181</value>
 </property>
</configuration>

